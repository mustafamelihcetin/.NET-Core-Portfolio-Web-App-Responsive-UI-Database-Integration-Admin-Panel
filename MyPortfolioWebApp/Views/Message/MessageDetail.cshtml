@model Message
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}
<input type="hidden" asp-for="ID" />
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">                        
                        <div class="card-sub">
                            <bold>Gönderen:</bold> @Model.NameSurname -- <bold>Email:</bold> @Model.Email -- <bold>Tarih:</bold> @Model.SendDate
                            <br />
                            Mesaj: @Model.MessageDetail
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

